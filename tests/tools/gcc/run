# -*- shell-script -*-
function run ()
{
    local files=( main.o foo.bin foo/foo.o foo/libfoo.a )

    rm ${files[@]} 2>/dev/null

    local lines=$(smart)
    for ((i=0; i < ${#files[@]}; ++i)); {
	if [[ ! -f ${files[i]} ]]; then
	    error "missing ${files[i]}"
	fi
    }

    local s=$(./foo.bin)
    if [[ "x$s" != "xfoo: foo" ]]; then
	error "$s != foo: foo"
    fi
}
